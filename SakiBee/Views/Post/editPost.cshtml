@model EditViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>

<div class="content-wrapper">
    <div class="row">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-action="Index" asp-controller="Post" class="btn btn-primary">Back to List</a>
        </div>
    </div>

    <hr />


    <form asp-action="EditPost" method="post" enctype="multipart/form-data">
        <div class="validation-summary">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <input asp-for="Post.Id" hidden/>
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Post.Title" class="form-control" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Category</label>
            <select asp-for="Post.CategoryId" asp-items="Model.Categories" class="form-control">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Author</label>
            <input asp-for="Post.Author" class="form-control" />
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Content</label>
            <textarea asp-for="Post.content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Post.content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>FeatureImage</label>
            <input asp-for="FeatureImage" type="file" class="form-control" />
            <span asp-validation-for="FeatureImage" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-2">Update</button>
        <a asp-action="index" asp-controller="Post" class="btn btn-primary mt-2">Back to List</a>

    </form>

</div>

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/8v7ap9no879e3vf48t9bipzno7dfbo8dgefvm9kgcttuz3nu/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
          tinymce.init({
          selector: 'textarea'
        });
    </script>
}
