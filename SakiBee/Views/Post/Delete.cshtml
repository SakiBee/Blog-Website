@model Post

@{
    ViewData["Title"] = "Delete Post";
}

<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>

<div class="content-wrapper text-center">
    <h2>@ViewData["Title"]</h2>
    <h4>Do you want to delete this post?</h4>

    <form asp-action="DeleteConfirm" asp-controller="Post" method="post">
        <input asp-for="@Model.Id" type="hidden" />
        <button type="submit" class="btn btn-danger mt-2">Delete</button>
        <a asp-action="Index" asp-controller="Post" class="btn btn-secondary mt-2">Cancle</a>
    </form>
</div>

